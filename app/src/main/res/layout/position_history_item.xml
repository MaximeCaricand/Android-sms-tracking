<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="15dp">

        <TextView
            android:id="@+id/ph_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="dd/mm/yyyy hh:mm:ss"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/hs_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@id/ph_phoneNumber"
            android:src="@drawable/phone" />

        <TextView
            android:id="@+id/ph_phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="+33606060606"
            android:textAlignment="textEnd"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/ph_lat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ph_date"
            android:layout_marginTop="2dp"
            android:text="Lat: 00.0000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/ph_lng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ph_date"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:text="Lng: 00.00000000"
            android:textAlignment="textEnd"
            android:textSize="15dp" />

    </RelativeLayout>

</LinearLayout>
